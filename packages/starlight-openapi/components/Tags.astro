---
import Tag from './Tag.astro'

interface Props {
  label?: string
  tags: unknown[]
}

const { label, tags: allTags } = Astro.props

const tags = allTags.filter((tag) => typeof tag === 'string')
---

{
  tags.length > 0 && (
    <div class="tags">
      {label && <>{label}</>}
      {tags.map((tag) => (
        <Tag>{tag}</Tag>
      ))}
    </div>
  )
}

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    font-size: var(--sl-text-xs);
    gap: 0.4rem;
    margin-block: 0.5rem;
  }
</style>
