---
interface Props {
  empty?: boolean
  level?: 2 | 3 | 4
  title: string
}

const { empty, level = 3, title } = Astro.props

const Title = `h${level}`
---

<section>
  <Title>{title}<slot name="post-title" /></Title>
  {
    Astro.slots.has('pre-panel') && (
      <div>
        <slot name="pre-panel" />
      </div>
    )
  }
  {
    !empty && (
      <div class="panel">
        <slot />
      </div>
    )
  }
  {
    Astro.slots.has('post-panel') && (
      <div>
        <slot name="post-panel" />
      </div>
    )
  }
</section>

<style>
  .panel {
    background-color: var(--sl-color-gray-6);
    border: 1px solid var(--sl-color-gray-5);
    padding: 1rem;
  }

  .panel:empty {
    background-color: red !important;
  }

  :global(main .content) section :global(p) {
    margin-top: 0.5rem;
  }

  :global(main .content) section :global(p:first-child) {
    margin-top: 0;
  }

  :global(main .content) section :global(ul:not(:first-child)) {
    margin-top: 0.5rem;
  }

  :global(main .content) section :global(ul:only-child) {
    padding-inline-start: 1.3rem;
  }
</style>
