---
interface Props {
  options: string[] | undefined
}

const { options } = Astro.props
---

{
  options && options.length > 0 && (
    <select>
      {options.map((option) => (
        <option value={option}>{option}</option>
      ))}
    </select>
  )
}

<style>
  select {
    background-color: var(--sl-color-gray-5);
    border: 1px solid var(--sl-color-gray-4);
    margin-bottom: 0.5rem;
    padding: 0.5rem;
    width: 100%;
  }
</style>
