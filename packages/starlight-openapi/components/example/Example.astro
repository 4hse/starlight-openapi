---
import type { ExampleV3 } from '../../libs/example'

interface Props {
  example?: ExampleV3
  raw?: ExampleV3['value']
}

const { example, raw } = Astro.props

const exampleToRender = raw === undefined ? example : { value: raw }
---

{
  exampleToRender && (
    <>
      {exampleToRender.summary && <div>Example Summary: {exampleToRender.summary}</div>}
      {exampleToRender.description && <div>Example Description IN MARKDOWN: {exampleToRender.description}</div>}
      {exampleToRender.externalValue && <div>Example external value (LINK): {exampleToRender.externalValue}</div>}
      {exampleToRender.value && <div>Example value: {JSON.stringify(exampleToRender.value)}</div>}
    </>
  )
}
